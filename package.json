{
  "name": "Kaboom.js",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^7.0.0"
  },
  "scripts": {
    "start:dev": "concurrently \"yarn start:app\" \"yarn start:server\"",
    "start:server": "cd server && yarn start",
    "start:app": "cd app && yarn start",
    "yarn:install-app": "cd app && yarn install",
    "yarn:install-server": "cd server && yarn install",
    "yarn:install": "concurrently \"yarn:install-server\" \"yarn:install-app\""
  }
}
